xautolock -time 15 -notify 15 -notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 15 seconds'" -locker slock -corners -000 &


# xmobar&
(i3status | xmobar -o -t "%StdinReader%" -c "[Run StdinReader]") &


trayer --edge bottom --align right --SetDockType true --SetPartialStrut true --expand true --transparent true --alpha 0 --tint 0x000000 --height 20 &
