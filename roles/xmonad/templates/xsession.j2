#!/bin/bash


# EurKey keyboard (US + umlauts etc.)
setxkbmap eu


# disable touchpad while typing (does this work?)
# https://ubuntuforums.org/showthread.php?t=2317843
/usr/bin/syndaemon -i 1 -K -d &

(sleep 3; dropbox stop;  dbus-launch dropbox start) &

nm-applet&
volti &
#feh --bg-fill privat/bilder2/Hintergrundbilder/yaara-orig.jpg


pkill -u $USER ssh-agent
eval $(ssh-agent)
